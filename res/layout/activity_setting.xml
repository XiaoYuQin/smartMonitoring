<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.smartmonitoring.SettingActivity"
    tools:ignore="MergeRootFrame" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/TextView01"
        android:layout_below="@+id/TextView01"
        android:layout_marginTop="50dp"
        android:text="端口"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <EditText
        android:id="@+id/setting_EditText01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView1"
        android:layout_alignBottom="@+id/textView1"
        android:layout_alignLeft="@+id/setting_editText1"
        android:layout_alignRight="@+id/setting_editText1"
        android:background="@android:drawable/edit_text"
        android:inputType="number"

        android:textStyle="bold" >

    </EditText>

    <TextView
        android:id="@+id/TextView01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/setting_editText1"
        android:layout_alignBottom="@+id/setting_editText1"
        android:layout_alignParentLeft="true"
        android:text="IP地址"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <EditText
        android:id="@+id/setting_editText1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="126dp"
        android:layout_toRightOf="@+id/TextView01"
        android:background="@android:drawable/edit_text"
        android:textStyle="bold" />

    <Button
        android:id="@+id/setting_button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:text="确定" />

</RelativeLayout>

