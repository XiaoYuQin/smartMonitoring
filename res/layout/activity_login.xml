<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.smartmonitoring.LoginActivity"
    tools:ignore="MergeRootFrame" >

    <EditText
        android:id="@+id/login_editText1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/login_textView2"
        android:layout_alignBottom="@+id/login_textView2"
        android:layout_toRightOf="@+id/login_textView2"
        android:background="@android:drawable/edit_text"
        android:ems="10"
        android:maxLength="5"
        android:minEms="5"
        android:textStyle="bold" >

    </EditText>

    <TextView
        android:id="@+id/login_textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/login_textView1"
        android:layout_marginLeft="91dp"
        android:layout_marginTop="56dp"
        android:text="用户："
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="50px" />

    <TextView
        android:id="@+id/login_TextView01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/login_editText1"
        android:layout_marginTop="23dp"
        android:layout_toLeftOf="@+id/login_EditText01"
        android:text="密码："
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="50px" />

    <EditText
        android:id="@+id/login_EditText01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/login_TextView01"
        android:layout_alignBottom="@+id/login_TextView01"
        android:layout_alignLeft="@+id/login_editText1"
        android:background="@android:drawable/edit_text"
        android:inputType="numberPassword"
        android:ems="10"
        android:maxLength="5"
        android:minEms="5"
        android:textStyle="bold" />

    <CheckBox
        android:id="@+id/checkBox1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/login_EditText01"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="19dp"
        android:text="记住密码" />

    <TextView
        android:id="@+id/login_textView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="63dp"
        android:gravity="center"
        android:text="Welcome"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="100px" />

    <Button
        android:id="@+id/login_button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/checkBox1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:text="登录" />

</RelativeLayout>